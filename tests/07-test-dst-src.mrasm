#!mrasm

ADDR:
    .DB 42
INCEPTION:
    .DB ADDR
    .DB (ADDR)
    ; .DB ((INCEPTION))     ; does not work
    ; .DB (((01)))          ; does not work

    LD R0, ADDR

LOOP:
    DEC R0
    INC R0
    DEC (R0)
    DEC (R0+)
    DEC ((R0+))
    DEC 0xFF
    DEC (0xFF)
DOOP:
    INC R0
    JZS LOOP
    JR LOOP
